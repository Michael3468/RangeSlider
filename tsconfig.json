{
  "extends": "./tsconfig-checks.json",
  "compilerOptions": {
    "outDir": "./dist",
    "target": "ES2015",
    "module": "ES2015",
    "moduleResolution": "node",
    "allowJs": true,
    "removeComments": true,

    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src/**/*"
  ]
}